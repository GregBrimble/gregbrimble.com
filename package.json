{
  "private": true,
  "name": "gregbrimble.com",
  "description": "Personal website of Greg Brimble, Technological Engineer",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "npm run setup:worker",
    "setup:worker": "remix setup cloudflare-workers",
    "setup:local": "remix setup",
    "build:fonts": "mkdir -p ./public/fonts && cp -r ./node_modules/@fontsource/inter ./public/fonts",
    "prebuild:css": "npm run build:fonts",
    "build:css": "tailwindcss -o app/styles/app.css",
    "build:remix": "remix build",
    "build:worker": "esbuild worker/index.ts --bundle --outfile=public/_worker.js --format=esm --define:VERSION=\\\"$(git rev-parse HEAD)\\\" --define:process.env.NODE_ENV=\"'production'\"",
    "prebuild": "npm run build:css && npm run setup:worker",
    "build": "NODE_ENV=production npm run build:remix && npm run build:worker",
    "prestart": "npm run setup:local",
    "start:remix": "remix dev",
    "prestart:css": "npm run build:fonts",
    "start:css": "npm run build:css -- -w",
    "start": "concurrently \"npm run start:remix\" \"npm run start:css\""
  },
  "dependencies": {
    "@fontsource/inter": "4.5.1",
    "@fortawesome/fontawesome-svg-core": "1.2.36",
    "@fortawesome/free-brands-svg-icons": "5.15.4",
    "@fortawesome/react-fontawesome": "0.1.16",
    "@heroicons/react": "1.0.5",
    "@remix-run/cloudflare-workers": "1.0.0-rc.2",
    "@remix-run/react": "0.21.0",
    "moment": "2.29.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.0.2",
    "remix": "1.0.0-rc.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "2.2.2",
    "@remix-run/dev": "1.0.0-rc.2",
    "@remix-run/node": "1.0.0-rc.2",
    "@remix-run/serve": "1.0.0-rc.2",
    "@tailwindcss/aspect-ratio": "0.3.0",
    "@tailwindcss/forms": "0.4.0-alpha.1",
    "@tailwindcss/typography": "0.5.0-alpha.2",
    "@types/react": "17.0.35",
    "@types/react-dom": "17.0.11",
    "autoprefixer": "10.4.0",
    "concurrently": "6.4.0",
    "esbuild": "0.13.15",
    "miniflare": "1.4.1",
    "schema-dts": "1.0.0",
    "tailwindcss": "3.0.0-alpha.1",
    "typescript": "4.5.2"
  },
  "engines": {
    "node": ">=16.7"
  },
  "sideEffects": false,
  "main": "public/_worker.js"
}
