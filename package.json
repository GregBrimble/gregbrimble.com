{
  "private": true,
  "name": "gregbrimble.com",
  "description": "Personal website of Greg Brimble, Technological Engineer",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "npm run setup:worker",
    "setup:worker": "remix setup cloudflare-workers",
    "setup:local": "remix setup",
    "build:remix": "remix build",
    "prebuild:worker": "npm run setup:worker",
    "build:worker": "esbuild worker/index.ts --bundle --outfile=dist/worker.mjs --format=esm --minify --sourcemap --define:VERSION=\\\"$(git rev-parse HEAD)\\\"",
    "build": "npm run build:remix && npm run build:worker",
    "prestart": "npm run setup:local",
    "start": "remix run"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "0.19.3",
    "@remix-run/react": "0.19.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.0.0-beta.6",
    "remix": "0.19.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "2.2.2",
    "@remix-run/dev": "0.19.3",
    "@remix-run/node": "0.19.3",
    "@remix-run/serve": "0.19.3",
    "@tailwindcss/forms": "0.3.4",
    "@tailwindcss/typography": "0.4.1",
    "@types/react": "17.0.31",
    "@types/react-dom": "17.0.10",
    "esbuild": "0.13.8",
    "miniflare": "1.4.1",
    "tailwindcss": "2.2.17",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.mjs"
}
