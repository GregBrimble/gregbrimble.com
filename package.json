{
  "private": true,
  "name": "gregbrimble.com",
  "description": "Personal website of Greg Brimble, Technological Engineer",
  "version": "1.0.0",
  "scripts": {
    "//": "Runs everything locally (with watch)",
    "postinstall": "remix setup cloudflare-workers",
    "build:fonts": "mkdir -p ./public/fonts && cp -r ./node_modules/@fontsource/inter ./public/fonts",
    "prebuild:css": "npm run build:fonts",
    "build:css": "tailwindcss -o app/styles/app.css",
    "build:css:production": "npm run build:css -- --minify",
    "build:css:development": "npm run build:css",
    "build:remix": "remix build",
    "build:worker": "esbuild worker/index.ts --bundle --outfile=public/_worker.js --format=esm --define:VERSION=\\\"$(git rev-parse HEAD)\\\"",
    "build:worker:production": "npm run build:worker -- --define:process.env.NODE_ENV=\"'production'\" --minify",
    "build:worker:development": "npm run build:worker -- --define:process.env.NODE_ENV=\"'development'\"",
    "build:production": "NODE_ENV=production npm run build:css:production && npm run build:remix && npm run build:worker:production",
    "build:development": "NODE_ENV=development npm run build:css:development && npm run build:remix && npm run build:worker:development",
    "build": "npm run build:production",
    "start:css": "npm run build:css:development -- -w",
    "start:remix": "remix watch",
    "start:worker": "npm run build:worker:development -- --watch",
    "start:wrangler": "wrangler pages dev ./public --kv SESSIONS_KV --do SESSIONS_DO=SessionStorageDurableObject",
    "start": "concurrently \"npm run start:css\" \"npm run start:remix\" \"npm run start:worker\" \"npm run start:wrangler\""
  },
  "dependencies": {
    "@fontsource/inter": "4.5.1",
    "@fortawesome/fontawesome-svg-core": "1.2.36",
    "@fortawesome/free-brands-svg-icons": "5.15.4",
    "@fortawesome/react-fontawesome": "0.1.16",
    "@heroicons/react": "1.0.5",
    "@remix-run/cloudflare-workers": "1.0.0-rc.2",
    "@remix-run/react": "1.0.0-rc.2",
    "moment": "2.29.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.0.2",
    "remix": "1.0.0-rc.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.2.0",
    "@remix-run/dev": "1.0.0-rc.2",
    "@remix-run/node": "1.0.0-rc.2",
    "@remix-run/serve": "1.0.0-rc.2",
    "@tailwindcss/aspect-ratio": "0.3.0",
    "@tailwindcss/forms": "0.4.0-alpha.2",
    "@tailwindcss/typography": "0.5.0-alpha.3",
    "@types/react": "17.0.36",
    "@types/react-dom": "17.0.11",
    "autoprefixer": "10.4.0",
    "concurrently": "6.4.0",
    "esbuild": "0.13.15",
    "miniflare": "1.4.1",
    "schema-dts": "1.0.0",
    "tailwindcss": "3.0.0-alpha.2",
    "typescript": "4.5.2",
    "wrangler": "0.0.0-bd89b54"
  },
  "engines": {
    "node": ">=16.7"
  },
  "sideEffects": false,
  "main": "public/_worker.js"
}
